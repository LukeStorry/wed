---
import "@fontsource/arvo";
import { ViewTransitions } from "astro:transitions";

interface Props {
  title?: string;
  nextPage: string;
  blackBackground?: boolean;
}

const { title, nextPage, blackBackground } = Astro.props;

const duration = "0.6s";
const rotate = {
  old: {
    name: "spinOut",
    duration,
    easing: "ease-in",
  },
  new: {
    name: "spinIn",
    duration,
    delay: duration,
    easing: "ease-out",
  },
};
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="description"
      content="Luke & Marnie are getting Married on the 14th June 2025."
    />
    <meta name="viewport" content="width=device-width" />
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
    <link rel="manifest" href="/site.webmanifest" />
    <meta name="generator" content={Astro.generator} />
    <title>Luke & Marnie's wedding {title ? ` - ${title}` : null}</title>
    <ViewTransitions />
  </head>
  <body
    transition:animate={{ forwards: rotate, backwards: rotate }}
    class="p-4 sm:p-8 min-w-96 bg-green-800 flex items-center justify-center h-svh w-screen"
  >
    <a
      href={nextPage}
      class={`max-h-full w-full sm:w-auto sm:h-full aspect-[1220/2000] rounded-lg border-2
        border-black ${blackBackground ? "bg-black py-1" : "bg-white p-2"} hover:animate-spin-tease drop-shadow-2xl shadow-2xl`}
    >
      <slot />
    </a>
  </body>
</html>
